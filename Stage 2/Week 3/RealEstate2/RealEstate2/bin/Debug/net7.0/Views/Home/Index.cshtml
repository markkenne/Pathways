@{
    ViewData["Title"] = "Listings Page";
}

<div class="text-center">
    <h2 class="display-4">Welcome</h2>
    <p>Learn about building Web apps with ASP.NET Core</a>.</p>
</div>

<h1>To-do CRUD</h1>
<h3>Add</h3>
<form action="javascript:void(0);" method="POST" onsubmit="addItem()">
    <input type="text" id="add-address" placeholder="New address">
    <input type="text" id="add-agent" placeholder="New agent">
    <input type="submit" value="Add">
</form>

<div id="editForm">
    <h3>Edit</h3>
    <form action="javascript:void(0);" onsubmit="updateItem()">
        <input type="hidden" id="edit-id">
        <input type="checkbox" id="edit-isSold">
        <input type="text" id="edit-address">
        <input type="text" id="edit-agent">
        <input type="submit" value="Save">
        <a onclick="closeInput()" aria-label="Close">&#10006;</a>
    </form>
</div>

<p id="counter"></p>

<table>
    <tr>
        <th>Is Sold?</th>
        <th>Address</th>
        <th>Agent</th>
        <th></th>
        <th></th>
    </tr>
    <tbody id="todos"></tbody>
</table>

<script src="js/site.js" asp-append-version="true"></script>
<script type="text/javascript">getItems();</script>
